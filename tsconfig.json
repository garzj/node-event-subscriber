{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true
  },
  "exclude": ["./node_modules", "./lib"],
  "include": ["./src"]
}
